<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Views.MainActivity">

    <LinearLayout
            android:id="@+id/visor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="bottom"
            android:background="@color/light_grey"
            >
        <TextView
                android:id="@+id/formula"
                android:text="Calculo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:maxLines="1"
                android:layout_weight="2"
                android:textSize="30dp"
        />
        <TextView
                android:id="@+id/resultado"
                android:text="Resultado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:maxLines="1"
                android:layout_weight="2"
                android:textSize="40dp"
        />
        <LinearLayout
            android:id="@+id/linha_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@color/light_grey"
            android:layout_marginTop="0.8dp">

            <Button
                    android:id="@+id/btn_num_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="7"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"
                    />

            <Button
                    android:id="@+id/btn_num_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="8"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>

            <Button
                    android:id="@+id/btn_num_9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="9"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"
            />

            <Button
                    android:id="@+id/btn_dividir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="รท"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/linha_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="0.8dp">

            <Button
                    android:id="@+id/btn_num_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="4"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>

            <Button
                    android:id="@+id/btn_num_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="5"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>

            <Button
                    android:id="@+id/btn_num_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="6"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>

            <Button
                    android:id="@+id/btn_multiplicar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="X"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/linha_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="0.8dp">

            <Button
                    android:id="@+id/btn_num_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="1"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>

            <Button
                    android:id="@+id/btn_num_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="2"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>

            <Button
                    android:id="@+id/btn_num_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="3"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>

            <Button
                    android:id="@+id/btn_subtrair"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="-"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/linha_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="0.8dp">

            <Button
                    android:id="@+id/btn_ponto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="."
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>

            <Button
                    android:id="@+id/btn_num_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="0"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>

            <Button
                    android:id="@+id/btn_raiz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="โ"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>

            <Button
                    android:id="@+id/btn_somar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="+"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/linha_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="0.8dp">

            <Button
                    android:id="@+id/btn_corrigir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="C"
                    android:textColor="@android:color/holo_orange_dark"
                    android:background="@android:color/white"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>

            <Button
                    android:id="@+id/btn_calcular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:textSize="25sp"
                    android:text="="
                    android:textColor="@android:color/white"
                    android:background="@android:color/holo_orange_dark"
                    android:layout_marginLeft="0.05dp"
                    android:layout_marginTop="0.8dp"/>

        </LinearLayout>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>